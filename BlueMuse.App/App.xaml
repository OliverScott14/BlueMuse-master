<Application
    x:Class="BlueMuse.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBarButtonForegroundPointerOver" Color="FloralWhite"/>
                    <SolidColorBrush x:Key="AppBarButtonBackgroundPointerOver" Color="#27000000" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBarButtonForegroundPointerOver" Color="FloralWhite"/>
                    <SolidColorBrush x:Key="AppBarButtonBackgroundPointerOver" Color="#27000000" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
